  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "server.web",
        "AMBIENTE": "dev",
        "IS_DEV_MODE": "1"
      },
      "args": [
        "run",
        "--debug"
        // "--no-debugger",
        // "--no-reload"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Celery",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "server.worker",
        "worker",
        "-P",
        "solo",
        // "--concurrency=1",
        "--loglevel=INFO",
        "-E",
        // "-Q",
        // "default,default.fifo"
      ],
      "env": {
        "AMBIENTE": "dev",
        "GRAPHQL_DEBUG": "1",
        "SNS_TOPIC_ERROR_FAKE": "1",
      },
    },
    {
      "name": "Pytest: Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv",
        "--no-cov",
        "${file}",
      ],
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "AMBIENTE": "dev",
        "_PYTEST_RAISE": "1",
        "PYTHONPATH": "${workspaceFolder}",
      }
    }
  ]
}
